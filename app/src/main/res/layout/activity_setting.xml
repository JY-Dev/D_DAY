<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Activty.SettingActivity">

    <ImageView
            android:id="@+id/img_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:background="@drawable/basic_background"
            android:scaleType="centerCrop"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="352dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/gradation_back_01"
            android:orientation="vertical"
            android:paddingStart="30dp"
            android:paddingEnd="30dp"
            android:layout_alignParentStart="true"
            android:layout_marginBottom="1dp"
            android:layout_marginStart="0dp">

        <TextView
                android:id="@+id/title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:layout_marginTop="21dp"
                android:layout_marginBottom="35dp"
                android:textColor="@color/colorwhite"
                android:text="레드벨벳의 리더아아아아"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="D"
                    android:textColor="@color/colorwhite"/>

            <TextView
                    android:id="@+id/d_day_sign"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="+"
                    android:textColor="@color/colorwhite"/>

            <TextView
                    android:id="@+id/d_day_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="45sp"
                    android:text="3210"
                    android:textColor="@color/colorwhite"/>

        </LinearLayout>

        <TextView
                android:id="@+id/seldate_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorwhite"
                android:text="2017년 3월 29일"/>



        <TextView
                android:layout_marginTop="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="18sp"
                android:textColor="@color/colorwhite"
                android:text=""/>

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="27dp">

            <LinearLayout
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                <ImageButton
                        android:id="@+id/img_sel_btn"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_marginEnd="30dp"
                        android:background="@drawable/select_img"/>

                <ImageButton
                        android:id="@+id/sel_complete_btn"
                        android:layout_width="25dp"
                        android:layout_height="match_parent"
                        android:background="@drawable/select_finish"/>


            </LinearLayout>


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>